<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= Pygments.highlight(@post.content, :lexer => 'ruby').html_safe %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %> 
<%= link_to 'Back', posts_path, class: "btn btn-default" %>
